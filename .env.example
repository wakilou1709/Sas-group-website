# SAS Group Website - Environment Variables
# Copiez ce fichier en .env.local et remplissez les valeurs

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://www.sas-group.com
NEXT_PUBLIC_SITE_NAME=SAS Group

# Email Configuration (pour le formulaire de contact)
# Option 1: EmailJS
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key

# Option 2: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=contact@sas-group.com

# Google Analytics (optionnel)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Contact Information
NEXT_PUBLIC_BURKINA_PHONE=+226XXXXXXXX
NEXT_PUBLIC_TANZANIA_PHONE=+255XXXXXXXXX
NEXT_PUBLIC_CONTACT_EMAIL=contact@sas-group.com
NEXT_PUBLIC_BURKINA_ADDRESS=Ouagadougou, Burkina Faso
NEXT_PUBLIC_TANZANIA_ADDRESS=Dar es Salaam, Tanzania

# Social Media
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/sasgroup
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/sasgroup
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/sasgroup

# Wateri Configuration
NEXT_PUBLIC_WATERI_DEMO_URL=https://demo.wateri.com
